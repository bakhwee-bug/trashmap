<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        //선택 O
        <item android:state_checked="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/ivory_500" />
                <stroke
                    android:width="1dp"
                    android:color="#3CA384" />
                <size
                    android:width="36dp"
                    android:height="50dp" />

                <corners android:radius="11dp" />
            </shape>

        </item>

        //선택 X
        <item android:state_checked="false">
            <shape android:shape="rectangle">
                <solid android:color="@color/ivory_200" />
                <stroke
                    android:width="1dp"
                    android:color="#3CA384" />
                <size
                    android:width="36dp"
                    android:height="50dp" />

                <corners android:radius="11dp" />
            </shape>

        </item>
    </selector>
